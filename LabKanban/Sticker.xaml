<UserControl x:Class="LabKanban.Sticker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabKanban"
             mc:Ignorable="d" 
             >
    <DockPanel>
        <StackPanel>
            <Button x:Name="StickerButton" Click="StickerButton_Click" MouseMove="StickerButton_MouseMove" Style="{StaticResource MaterialDesignFlatButton}" ></Button>
            <Popup x:Name="StickerPopup" StaysOpen="False" Placement="Mouse">
                <ListBox x:Name="popupList">
                    
                </ListBox>
            </Popup>
        </StackPanel>
    </DockPanel>
</UserControl>
